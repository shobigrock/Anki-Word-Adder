{
  "manifest_version": 3,
  "name": "Anki Word Adder",
  "description": "Add selected words to Anki with Japanese translation",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png",
    "default_title": "Anki Word Adder",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab", 
    "scripting", 
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/",
    "http://localhost:8765/"
  ],
  "icons": {
    "16": "icon.png",
    "128": "icon_128.png"
  },
  "background": {
    "service_worker": "event.js",
    "type": "module"
  }
}
